<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relLayout1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backArrowImageView"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textSize="25dp"
                android:layout_marginStart="50dp"
                android:textColor="#000"
                android:layout_marginTop="18dp"
                android:text="Edit Profile"/>

            <ImageView
                android:id="@+id/tick_imageView"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_check_black_24dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relLayout2"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout1">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:id="@+id/profile_imageView"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relLayout3"
            android:layout_width="match_parent"
            android:layout_below="@id/relLayout2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Change Photo"
                android:textColor="@color/blue"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout3"
            android:id="@+id/relLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/username_editText"
                android:layout_width="match_parent"
                android:hint="UserName"
                android:layout_marginStart="50dp"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout4"
            android:id="@+id/relLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/displayname_editText"
                android:hint="DisplayName"
                android:layout_marginStart="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account_box_black_24dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout5"
            android:id="@+id/relLayout6"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/website_editText"
                android:layout_width="match_parent"
                android:hint="Website"
                android:layout_marginStart="50dp"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_web_black_24dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout6"
            android:id="@+id/relLayout7"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:hint="Description"
                android:layout_marginStart="50dp"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_assignment_black_24dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relLayout8"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout7"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIVATE INFORMATION"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="30dp"
                android:textColor="#000"
                android:background="@drawable/below_grey_background"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout8"
            android:id="@+id/relLayout9"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:hint="Email"
                android:layout_marginStart="50dp"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email_black_24dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relLayout9"
            android:id="@+id/relLayout10"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:hint="Phone Number"
                android:layout_marginStart="50dp"
                android:background="@drawable/below_grey_background"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:src="@drawable/ic_phone_android_black_24dp"/>


        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>